<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/VistaNumeros"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/TextNumeros"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="0"
            android:textSize="110dp"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@+id/VistaNumeros"
            app:layout_constraintBottom_toTopOf="@+id/ContenedorBotones"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ContenedorBotones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VistaNumeros"
        android:orientation="vertical"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"

            >

            <Button
                android:id="@+id/siete"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="7"

                android:textSize="36dp" />

            <Button
                android:id="@+id/ocho"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="8"
                android:textSize="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.Button"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/nueve"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="9"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/multiplicacion"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="x"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >

            <Button
                android:id="@+id/cuatro"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="4"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                />

            <Button
                android:id="@+id/cinco"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="36dp" />

            <Button
                android:id="@+id/seis"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="6"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/suma"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="+"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >

            <Button
                android:id="@+id/uno"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="1"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                />

            <Button
                android:id="@+id/dos"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="2"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/tres"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="3"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/resta"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="-"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >



            <Button
                android:id="@+id/cero"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="0"
                android:textSize="36dp"
                android:layout_weight="60"
                android:layout_margin="5dp"
                />


            <Button
                android:id="@+id/igual"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="="
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/division"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="รท"
                android:textSize="36dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>